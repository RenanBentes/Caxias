<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Topicos.Topico6Activity">

    <TextView
        android:layout_width="412dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:text="Apoio Incondicional"
        android:textAlignment="center"
        android:textColor="#E6151414"
        android:textColorHint="#E6151414"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/simolo7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.301" />

    <TextView
        android:id="@+id/texto6"
        android:layout_width="383dp"
        android:layout_height="426dp"
        android:layout_marginTop="16dp"
        android:justificationMode="inter_word"
        android:text="@string/Texto6"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#E6151414"
        android:textColorHint="#E6151414"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simolo7" />

    <ImageView
        android:id="@+id/simolo7"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mat_bel"
        tools:layout_editor_absoluteX="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>